@model IEnumerable<ApplicationType>

    <style>
        .container{
        max-width: 750px;
        }
    </style>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-dark">Список приложении</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Создать</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Наименование</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="70%">@item.Name</td>
                        <td class="text-center">
                            <div class="w-50 d-flex justify-content-between" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">Редактировать</a>
                                <a asp-controller="ApplicationType" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>По данному запросу ничего не найдено</p>
    }

</div>

